<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dg_background"
    tools:context=".IntroductionActivity1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction_screen_1_title"
            android:textAlignment="viewStart"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_above="@id/introduction_screen_1_subtitle_1"
            android:textSize="48sp"/>
        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction_screen_1_subtitle_1"
            android:textAlignment="viewStart"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:textSize="30sp"/>
        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction_screen_1_subtitle_2"
            android:textAlignment="viewStart"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_below="@id/introduction_screen_1_subtitle_1"
            android:textSize="30sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:background="@color/colorGreyLight"
            android:paddingTop="1dp"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/buttonNext1"
                android:clickable="false"
                android:background="@color/colorPrimary"
                android:foreground="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:drawableRight="@android:drawable/ic_media_next"
                android:text="@string/next"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>